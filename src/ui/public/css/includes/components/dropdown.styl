.com-dropdown
  position: relative;

  .com-dropdown-trigger
    cursor: pointer;

  .com-dropdown-content
    display: none;
    position: absolute;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);

  &:hover .com-dropdown-content
    display: block;
    padding 10px 40px
    background-color #fff
