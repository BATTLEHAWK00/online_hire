.com-table
  width 100%
  border-collapse collapse

  tr
    height 40px

  tr:nth-child(odd)
    background-color #f8f8f8

  th
    height 50px
    border-spacing 0
    border-style solid
    border-width 0
    border-bottom-width 1px
    border-color #c9c9c9
    background-color white

  th:first-child
    border-left-width 0

  th:last-child
    border-right-width 0