.com-navbar
  width 100%
  height 50px
  line-height 50px
  margin-bottom 40px
  background-color white
  box-shadow 0 3px 5px $color-shadow-light

  h1
    display inline-block
    margin 0 10px 0 40px

  .com-loggeduser
    display inline-block
    float right
    margin-right 40px


  ul
    display inline-block
    padding 0
    margin 0

  li
    display inline-block
    list-style none
    transition background-color .5s
    border-top-color $color-nav-item-active-line
    //border-top-style solid
    //border-top-width 3px

    &:hover
      background-color $color-nav-item-hover
      transition background-color .25s

      a
        display inline-block
        color white

      &:active
        background-color $color-nav-item-active


  .com-navbar-item
    a
      color #0e6d6d
      text-decoration none
      transition color .5s
      padding 0 5px 0 5px
