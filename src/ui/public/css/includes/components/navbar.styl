.com-navbar
  width 100%
  height $navbar-height
  line-height $navbar-height
  margin-bottom 50px
  background-color white
  box-shadow 0 3px 5px $color-shadow-light

  &>a
    text-decoration none

    &>h1
      display inline-block
      margin 0 10px 0 40px
      vertical-align middle

  .com-loggeduser
    display inline-block
    float right
    margin-right 100px

  &>ul
    display inline-block
    padding 0
    margin 0

    &>li
      height $navbar-height
      display inline-block
      transition background-color .6s

      a
        color #0e6d6d
        text-decoration none
        transition color .3s
        padding 0 5px 0 5px
        vertical-align auto

      &:hover
        background-color $color-nav-item-hover
        transition background-color .25s

        a
          display inline-block
          color white

        &:active
          background-color $color-nav-item-active
