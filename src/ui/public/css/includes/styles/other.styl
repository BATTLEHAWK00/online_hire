a
  color $color-a-tag
  text-decoration none
  transition color .2s

  &:hover
    color $color-a-tag-hover
    text-decoration underline

  &:hover:active
    color $color-a-tag-active

ol
  margin 0
  padding 0

ul
  padding 0
  margin 0
  margin-block-start 0
  margin-block-end 0
  list-style none

.block-center
  margin 0 auto