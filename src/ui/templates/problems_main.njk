{% extends './partials/layouts/basic.njk' %}
{% block content %}
    <div class="section">
        <div class="section-header">
            <h1>题库</h1>
            <a href="/problems/add">
                <button class="com-button">添加题目</button>
            </a>
        </div>
        <div class="section-content">
            <table class="com-table">
                <th class="text-left">序号</th>
                <th class="text-left">题目名称</th>
                <th class="text-left">创建人</th>
                <th class="text-left">修改时间</th>
                <th class="text-left">引用次数</th>
                <th class="text-left">通过数</th>
                <th class="text-left">操作</th>
                {% if pDocs %}
                    {% for item in pDocs %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>
                                <a href="/problems/detail/{{ item._id }}">{{ item.name }}</a>
                            </td>
                            <td>{{ userMacro.userRender(uDict[item.createBy]) }}</td>
                            <td>{{ item.updateTime | momentAgo }}</td>
                            <td>0</td>
                            <td>0</td>
                            <td>
                                {{ formMacro.renderPostTag('problems_del','删除',item._id, '/problems/delete/'+ item._id) }}
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}