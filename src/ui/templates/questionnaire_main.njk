{% extends './partials/layouts/basic.njk' %}
{% block content %}
    <div class="section">
        <div class="section-header">
            <h1>共{{ context.qList.length | d(0) }}份试卷</h1>
            <a href="/questionnaire/add">
                <button class="com-button">创建试卷</button>
            </a>
        </div>
        <div class="section-content">
            <table class="com-table">
                <th class="text-left">序号</th>
                <th class="text-left">试卷名称</th>
                <th class="text-left">创建人</th>
                <th class="text-left">更新时间</th>
                <th class="text-left">引用次数</th>
                <th class="text-left">通过数</th>
                <th class="text-left">操作</th>
                {% if context.qList %}
                    {% for item in context.qList %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.createBy }}</td>
                            <td>{{ item.updateTime | momentAgo }}</td>
                            <td>0</td>
                            <td>0</td>
                            <td>
                                <a href="/questionnaire/detail/{{ item._id }}">查看</a>
                                <a href="/">编辑</a>
                                <a href="/">删除</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}