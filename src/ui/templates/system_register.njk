{% extends "./system_main.njk" %}

{% block content_main %}
    <div class='section'>
        <div class='section-header'>
            <h1>注册用户</h1>
        </div>
        <div class='section-content'>
            <div style='width: 50%;margin: 0 auto'>
                <form action='/manage/register' method='post'>
                    <div class="form-row">
                        <p>用户角色</p>
                        <select name='role'>
                            <option value='admin'>超级管理员</option>
                            <option value='manager'>管理员</option>
                            <option value='applicant'>普通用户</option>
                        </select>
                    </div>
                    <div class="form-row">
                        <p>用户名</p>
                        <input type="text" name="userName" placeholder="请输入用户名..." autofocus>
                    </div>
                    <div class="form-row">
                        <p>真实姓名</p>
                        <input type="text" name="realName" placeholder="请输入真实姓名..." autofocus>
                    </div>
                    <div class="form-row">
                        <p>手机号</p>
                        <input type="text" name="phone" placeholder="请输入手机号..." autofocus>
                    </div>
                    <div class="form-row">
                        <p>邮箱</p>
                        <input type="text" name="email" placeholder="请输入邮箱..." autofocus>
                    </div>
                    <div class="form-row">
                        <p>密码</p>
                        <input type="password" name="passwd" placeholder="请输入密码..." autofocus>
                    </div>
                    <div class="form-row">
                        <p>确认密码</p>
                        <input type="password" name="confirmPasswd" placeholder="请再次输入密码..." autofocus>
                    </div>
                    <div class="form-row text-center" style="margin: 20px auto">
                        <input type="submit" class="com-button" value="注册" style="width: 80%">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}