{% extends './partials/layouts/basic.njk' %}
{% block content %}
    <div class="section" style="width: 50%">
        <div class="section-header text-center" style="width: 80%;">
            <h1>欢迎进入{{ globalContext.displayName }}</h1>
        </div>
        <div class="section-content">
            {% if loggedUser %}
                <h4>你好，{{ loggedUser.userName }}</h4>
                <h4>点击上方导航栏使用本系统!</h4>
            {% else %}
                <h4>您还未登录，请先登录！</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}